extends ./layout1.jade
block contenido
  div(class="col-md-6 remove-float center-block big-top-space")
    form(action="/users", method="post")
      div(class="form-group")
        label(for="email") Email  
        input(type="text", name="email", placeholder="Email", id="email", class="form-control")
      div(class="top-space")
        label(for="password") Contraseña
        input(type="password", name="password", placeholder="Contraseña", id="password", class="form-control")
      div(class="top-space")
        label(for="password") Confirma tu Contraseña
        input(type="password", name="password_confirmation", placeholder="Confirma Contraseña", id="password", class="form-control")
      div(class="top-space")
        label(for="username") Username
        input(type="text", name="username", placeholder="Nombre de Usuario", id="username", class="form-control")
        div(class="row top-space")
          div(class="col-xs-12 col-sm-6")
            input(type="submit", value="Iniciar Sesión", class="btn btn-info")
          div(class="col-xs-12 col-sm-6 text-right")
